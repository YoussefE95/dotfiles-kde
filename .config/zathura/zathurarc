# Clipboard
set selection-clipboard clipboard

# Open document in fit-width mode by default
set adjust-open "width"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

set font "Hack Nerd Font Mono 12"
set default-bg "#191724"
set default-fg "#e0def4"

set statusbar-fg "#e0def4"
set statusbar-bg "#0f0e17"

set inputbar-bg "#0f0e17"
set inputbar-fg "#e0def4"

set notification-error-bg "#76a264"
set notification-error-fg "#e0def4"

set notification-warning-bg "#31748f"
set notification-warning-fg "#e0def4"

set highlight-color "#c4a7e7"
set highlight-active-color "#191724"

set completion-highlight-fg "#e0def4"
set completion-highlight-bg "#0f0e17"

set completion-bg "#0f0e17"
set completion-fg "#e0def4"

set notification-bg "#0f0e17"
set notification-fg "#e0def4"

set recolor "true"
set recolor-lightcolor "#191724"
set recolor-darkcolor "#e0def4"
set recolor-reverse-video "true"
set recolor-keephue "true"

set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

map <A-u> scroll half-up
map <A-d> scroll half-down
