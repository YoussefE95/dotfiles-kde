# Clipboard
set selection-clipboard clipboard

# Open document in fit-width mode by default
set adjust-open "width"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

set font "Hack Nerd Font Mono 12"
set default-bg "#24273a"
set default-fg "#cad3f5"

set statusbar-fg "#cad3f5"
set statusbar-bg "#1e2030"

set inputbar-bg "#1e2030"
set inputbar-fg "#cad3f5"

set notification-error-bg "#a6da95"
set notification-error-fg "#cad3f5"

set notification-warning-bg "#8aadf4"
set notification-warning-fg "#cad3f5"

set highlight-color "#c6a0f6"
set highlight-active-color "#24273a"

set completion-highlight-fg "#cad3f5"
set completion-highlight-bg "#1e2030"

set completion-bg "#1e2030"
set completion-fg "#cad3f5"

set notification-bg "#1e2030"
set notification-fg "#cad3f5"

set recolor "true"
set recolor-lightcolor "#24273a"
set recolor-darkcolor "#cad3f5"
set recolor-reverse-video "true"
set recolor-keephue "true"

set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

map <A-u> scroll half-up
map <A-d> scroll half-down
